<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E2E9E8">

    <LinearLayout
        android:paddingTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="10dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="75dp"
                    android:textAlignment="textEnd"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="From:"
                    android:textColor="@color/secondaryDark"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/fromEditView"
                    android:inputType="text"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/white_edit_text"
                    android:fontFamily="@font/poppins"
                    android:paddingStart="10dp"
                    android:text="USD"
                    android:textColor="@color/secondaryDark"
                    android:textSize="14sp" />
            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:textAlignment="textEnd"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text="To:"
                        android:textColor="@color/secondaryDark"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/toEditView"
                        android:inputType="text"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/white_edit_text"
                        android:fontFamily="@font/poppins"
                        android:paddingStart="10dp"
                        android:text="KES"
                        android:textColor="@color/secondaryDark"
                        android:textSize="14sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:padding="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:textAlignment="textEnd"
                        android:layout_width="75dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Amount:"
                        android:textColor="@color/secondaryDark"
                        android:textSize="14sp" />

                    <EditText
                        android:id="@+id/amountEditView"
                        android:inputType="number"
                        android:layout_width="100dp"
                        android:layout_height="30dp"
                        android:layout_marginStart="10dp"
                        android:background="@drawable/white_edit_text"
                        android:fontFamily="@font/poppins"
                        android:paddingStart="10dp"
                        android:textColor="@color/secondaryDark"
                        android:textSize="14sp" />
                </LinearLayout>

            </LinearLayout>

        <Button
            android:id="@+id/conversionButton"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/primary_btn_background"
            android:fontFamily="@font/poppins_medium"
            android:text="Convert"
            android:textAllCaps="false"
            android:textColor="@color/secondaryLight"
            android:textSize="14sp" />

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="300dp"
            android:layout_height="2dp"
            android:src="@drawable/single_line"/>

        <androidx.core.widget.ContentLoadingProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/resultsView"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:fontFamily="@font/poppins"
            android:padding="10dp"
            android:background="@drawable/white_edit_text"
            android:text="Resutls:"
            android:textColor="@color/secondaryDark"
            android:textSize="14sp"
            android:layout_marginTop="20dp"
            android:visibility="gone"/>


    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>